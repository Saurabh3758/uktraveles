<%- include('partials/header') %>
<head>
 <link rel="stylesheet" href="/css/style.css">   
</head>

<style>
  .bike-rent-section {
    background: #f5f7fa;
    padding: 60px 20px;
    font-family: 'Segoe UI', sans-serif;
  }

  .bike-rent-container {
    max-width: 1200px;
    margin: auto;
  }

  .bike-rent-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .bike-rent-header h2 {
    font-size: 2.2rem;
    color: #2c3e50;
    margin-bottom: 10px;
  }

  .bike-rent-header p {
    color: #555;
    font-size: 1.1rem;
  }

  .bike-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    justify-content: center;
  }

  .bike-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .bike-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
  }

  .bike-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .bike-card-content {
    padding: 18px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .bike-card-content h3 {
    color: #34495e;
    font-size: 1.3rem;
    margin-bottom: 8px;
  }

  .bike-card-content p {
    font-size: 0.95rem;
    color: #666;
    flex-grow: 1;
    margin-bottom: 15px;
  }

  .rent-button {
    align-self: flex-start;
    padding: 10px 18px;
    background: #3498db;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    border-radius: 6px;
    transition: background 0.3s;
  }

  .rent-button:hover {
    background: #2980b9;
  }

  /* Mobile Adjustments */
  @media (max-width: 600px) {
    .bike-rent-header h2 {
      font-size: 1.7rem;
    }

    .bike-rent-header p {
      font-size: 1rem;
    }

    .bike-card img {
      height: 180px;
    }

    .bike-card-content {
      padding: 15px;
    }
  }
</style>


<section class="bike-rent-section">
  <div class="bike-rent-container">
    <div class="bike-rent-header">
      <h2>Bike Rentals in Uttarakhand</h2>
      <p>Choose your ride and explore the beauty of the mountains with ease and style.</p>
    </div>

    <div class="bike-cards">
      <% const bikes = [
        { name: "Royal Enfield Classic 350", desc: "Perfect for long mountain rides with comfort and power.", img: "/images/enfield.jpg" },
        { name: "Bajaj Avenger", desc: "Enjoy smooth rides through valleys and towns of Uttarakhand.", img: "/images/avenger.jpg" },
        { name: "Honda Activa 6G", desc: "Best for short rides in towns like Mussoorie, Dehradun & Rishikesh.", img: "/images/activa.jpg" },
        { name: "Yamaha FZ", desc: "For those who love performance and a sporty ride through the hills.", img: "/images/fz.jpg" },
        { name: "Hero XPulse", desc: "Go off-road and experience the thrill of adventure in remote villages.", img: "/images/xpulse.jpg" }
      ]; %>

      <% bikes.forEach(bike => { %>
        <div class="bike-card">
          <img src="<%= bike.img %>" alt="<%= bike.name %>">
          <div class="bike-card-content">
            <h3><%= bike.name %></h3>
            <p><%= bike.desc %></p>
            <a href="/book" class="rent-button">Rent Now</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
