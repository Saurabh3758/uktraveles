<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/book.css">
</head>
<body>

 <!-- Hero Section (Same container) -->
<section class="hero">
  <img src="/images/uttarakhand.jpg" alt="Dehradun Travel Agency" class="hero-img">
  <div class="hero-content">
    <h1>Explore Uttarakhand with Uttarakhand Travel</h1>
    <p>Your one-stop solution for travel, rides & rentals</p>
    <button onclick="window.location.href='/book'">Book Now</button>
  </div>
</section>

<!-- Top Destinations -->
<div class="container"style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;">
  <section>
    <h2>⛰️ Top Destinations in Uttarakhand</h2>
    <div class="flex-grid">
      <% const destinations = [
        { name: "Kedarnath", img: "/images/kedarnath.jpg", desc: "Spiritual vibes & trek route" },
        { name: "Nainital", img: "/images/nainital.jpg", desc: "Lake city & scenic beauty" },
        { name: "Auli", img: "/images/auli.jpg", desc: "Snowy peaks & skiing paradise" }
      ]; %>
      <% destinations.forEach(dest => { %>
        <div class="card">
          <img src="<%= dest.img %>" alt="<%= dest.name %>">
          <h3><%= dest.name %></h3>
          <p><%= dest.desc %></p>
        </div>
      <% }); %>
    </div>
  </section>
</div>

<!-- Travel Types -->
<div class="container"style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;" >
  <section>
    <h2>🎒 Choose Your Travel Type</h2>
    <div class="flex-grid">
      <% const types = [
        { name: "Adventure", img: "/images/adventure.jpg", desc: "Trek, ski & explore" },
        { name: "Spiritual", img: "/images/spiritual.jpg", desc: "Temple tours & rituals" },
        { name: "Family", img: "/images/family.jpg", desc: "Safe & fun for all ages" }
      ]; %>
      <% types.forEach(type => { %>
        <div class="card">
          <img src="<%= type.img %>" alt="<%= type.name %>">
          <h3><%= type.name %></h3>
          <p><%= type.desc %></p>
        </div>
      <% }); %>
    </div>
  </section>
</div>

<!-- Our Rides -->
<div class="container" style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;">
  <section>
    <h2>🚗 Our Rides</h2>
    <div class="flex-grid">
      <% const rides = [
        { name: "Bike on Rent", img: "/images/bike.jpg", desc: "Convenient & affordable" },
        { name: "Car Rentals", img: "/images/car.jpg", desc: "Comfortable for long drives" }
      ]; %>
      <% rides.forEach(ride => { %>
        <div class="card">
          <img src="<%= ride.img %>" alt="<%= ride.name %>">
          <h3><%= ride.name %></h3>
          <p><%= ride.desc %></p>
        </div>
      <% }); %>
    </div>
  </section>
</div>

<!-- Bike Rent Promo -->
<div class="container"style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;">
  <section class="bike-promo">
    <div class="bike-content">
      <h2>🏍️ Rent a Bike Now</h2>
      <p>Zoom through the hills of Uttarakhand!</p>
      <ul>
        <li>Starting from ₹499/day</li>
        <li>Royal Enfield, Scooty, Pulsar & more</li>
        <li>Easy booking & verified documents</li>
      </ul>
      <button onclick="window.location.href='/bikeonrent'">Explore Bikes</button>
    </div>
    <div class="bike-img">
      <img src="/images/bike-rental.jpg" alt="Bike Rental">
    </div>
  </section>
</div>

<!-- Booking Form -->
 <div class="containers">

    <form id="bookingForm" action="/book-ride" method="POST"  enctype="multipart/form-data">
      <h2>Book Your Ride Across Uttarakhand</h2>

      <label for="name">Full Name</label>
      <input type="text" name="name" required>

      <label for="email">Email Address</label>
      <input type="email" name="email" required>

      <label for="phone">Phone Number</label>
      <input type="tel" name="phone" required>

      <label for="destination">Destination</label>
      <select name="destination" required>
        <option disabled selected>Select a destination</option>
        <option>Dehradun</option>
        <option>Mussoorie</option>
        <option>Nainital</option>
        <option>Rishikesh</option>
        <option>Haridwar</option>
        <option>Kedarnath</option>
        <option>Badrinath</option>
        <option>Joshimath</option>
        <option>Chopta</option>
        <option>Auli</option>
        <option>Almora</option>
        <option>Binsar</option>
        <option>Kausani</option>
        <option>Munsiyari</option>
        <option>Valley of Flowers</option>
      </select>

      <label for="startDate">Start Date</label>
      <input type="date" name="startDate" required>

      <label for="endDate">End Date</label>
      <input type="date" name="endDate" required>

      <label for="aadhaar">Upload Aadhaar (PDF/JPG)</label>
      <input type="file" name="aadhaar" accept=".pdf,.jpg,.jpeg,.png" required>

      <label for="photo">Upload Photo</label>
      <input type="file" name="photo" accept=".jpg,.jpeg,.png" required>

      <button type="submit">Submit Booking</button>
    </form>
  </div>

<!-- Why Us -->
<div class="container"style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;">
  <section class="why-us" style="align-items: center;">
    <h2>🌟 Why Choose Hi-Tech Rentals?</h2>
    <ul>
      <li>✅ Trusted travel partner in Uttarakhand</li>
      <li>✅ Verified drivers and vehicles</li>
      <li>✅ 24x7 Support & Assistance</li>
      <li>✅ Affordable pricing with no hidden charges</li>
    </ul>
  </section>
</div>

<!-- CTA -->
<div class="container" style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;">
  <section class="cta" style="align-items: center;">
    <h2>📞 Ready to Ride?</h2>
    <p>Call us now at <strong>+91-7060053712</strong> or click below to start your journey.</p>
    <button onclick="window.location.href='/book'">Book Now</button>
  </section>
</div>
  <%- include('partials/footer') %>
</body>
</html>
